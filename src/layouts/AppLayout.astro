---
import "@/styles/globals.css";
import { Toaster } from "@/components/ui/sonner";

interface Props {
  title?: string;
}

const { 
  title = "Untitled Page"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Recipes for everyone at scale" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <slot name="head" />
  </head>
  <body class="overflow-x-hidden scroll-smooth">
    <Toaster client:idle />
    <slot />
  </body>
</html>
